{
    "name": "vscode-tosa",
    "displayName": "VS Code TOSA",
    "description": "Open pull request page from line you selected.",
    "version": "0.0.4",
    "publisher": "kyoshidajp",
    "author": {
        "name": "Katsuhiko YOSHIDA"
    },
    "engines": {
        "vscode": "^1.21.0"
    },
    "license": "MIT",
    "categories": [
        "Languages",
        "Other"
    ],
    "keywords": [
        "github",
        "git"
    ],
    "homepage": "https://github.com/kyoshidajp/vscode-tosa",
    "repository": {
        "type": "git",
        "url": "https://github.com/kyoshidajp/vscode-tosa"
    },
    "bugs": {
        "url": "https://github.com/kyoshidajp/vscode-tosa/issues"
    },
    "activationEvents": [
        "*"
    ],
    "icon": "icon.png",
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "vscodetosa.openPR",
                "title": "Open Pull Request"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "vscodetosa.openPR",
                    "group": "vscodetosa"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "VSCode TOSA configuration",
            "properties": {
                "vscodetosa.token": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "A Token to access GitHub API v3."
                },
                "vscodetosa.openSystemBrowser": {
                    "type": [
                        "boolean"
                    ],
                    "default": true,
                    "description": "Open pull request page on a System Web Browser."
                },
                "vscodetosa.git": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "description": "A path of git command."
                },
                "vscodetosa.browser": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "description": "A command of browser which opens pull request when \"vscodetosa.openSystemBrowser\" is \"true\"."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "@octokit/rest": "^15.1.9",
        "@types/nock": "^9.1.2",
        "@types/request": "^2.47.0",
        "@types/sinon": "^4.3.0",
        "elegant-spinner": "^1.0.1",
        "nock": "^9.2.3",
        "request": "^2.85.0",
        "sinon": "^4.4.6"
    }
}
